<!--[if gt IE 8]><!--><html lang="pt-br"><!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title>Portal de Aplicativos â€” Redu</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= render :partial => "shared/typekit" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="main-wrapper">
      <% if current_user %>
        <%= render :partial => "shared/nav_global" %>
      <% else %>
        <%= render :partial => "shared/header_not_logged_in" %>
      <% end %>
      <div class="container">
        <div class="row">
          <div class="span16">
            <div class="apps-portal-header">
              <h2 class="portal-title icon-apps-portal-gray_48_50-before link-container pull-left">
                <%= link_to "Portal de Aplicativos", root_path, :class => "portal-title-link link-target", :title => "Portal de Aplicativos" %>
              </h2>
              <div id="apps-portal-breadcrumb" class="breadcrumb-mini-wrapper">
                <%= render_navigation renderer: :custom_breadcrumbs %>
              </div>
              <%= render partial: 'shared/search' %>
            </div>
            <div class="apps-portal-content content-body">
              <%= yield %>
            </div>
            <div class="breadcrumb-mini-wrapper">
              <%= render_navigation renderer: :custom_breadcrumbs %>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-pusher"></div>
    </div>
    <%= render :partial => "shared/footer" %>
  </body>
</html>
